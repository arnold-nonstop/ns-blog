<% if user_signed_in? %>
  <%= form_with model: [post, Comment.new] do |form| %>
    <%= form.label :content, "Your Comment:" %>
    <%= form.text_area :content, size: "20x5", class: "form-control"%>
    <%= form.submit "Add Comment", class: "btn btn-primary mt-4" %>
  <% end %>
<% else %>
  <%= link_to "Sign in to comment", new_user_session_path, class: "btn btn-primary mb-4" %>
<% end %>